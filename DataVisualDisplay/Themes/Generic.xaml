<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DataVisualDisplay.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DataVisualDisplay;component/Themes/LedDigital/LedDigital.xaml"/>
        <ResourceDictionary Source="/DataVisualDisplay;component/Themes/Gauges/CircularGauge.xaml"/>
        <ResourceDictionary Source="/DataVisualDisplay;component/Themes/Gauges/Thermometer.xaml"/>
        <ResourceDictionary Source="/DataVisualDisplay;component/Themes/Charts/PieChart.xaml"/>
        <ResourceDictionary Source="/DataVisualDisplay;component/Themes/Charts/DoubleAxisChart.xaml"/>
        <ResourceDictionary Source="/DataVisualDisplay;component/Themes/Charts/Legend.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type local:ChartFragment}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ChartFragment}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
