<UserControl x:Class="DataVisualDisplayDemo.View.LineChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataVisualDisplayDemo.View"
             xmlns:dvd="clr-namespace:DataVisualDisplay.Controls;assembly=DataVisualDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <dvd:Chart x:Name="lineChart" Title="Test Line Chart">
            <dvd:Chart.ChartFrames>
                <dvd:ChartFrames>
                    <dvd:ChartFrame ChartType="LineChart" Background="Gray" DataPoints="{Binding LineDataPointCollection}"/>
                </dvd:ChartFrames>
            </dvd:Chart.ChartFrames>
        </dvd:Chart>
    </Grid>
</UserControl>
